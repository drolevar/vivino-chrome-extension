{
  "manifest_version": 3,

  "name": "Vivino Wine Ratings",
  "version": "1.0.0",
  "description": "Get Vivino ratings for Vinmonopolet.no",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://www.vivino.com/*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Vivino Wine Ratings",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "content_scripts": [{
    "js": ["content.js"],
    "run_at": "document_idle",
    "matches": [
      "https://www.vinmonopolet.no/*"
    ]
  }]
}
